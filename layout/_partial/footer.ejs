<%
  const footerMoreVars = [
    {
      name: '{thisYear}',
      desc: '今年年份',
      func: () => {
        return new Date().getFullYear()
      }
    }
  ]
%>
<div class="footer">
  <div class="social">
    <ul>
      <% for (let item of theme.footer.social) { %>
        <li>
          <% if (item.name==='email' ) { %>
            <a title="<%- item.name %>" href="mailto:<%- item.path %>">
              <i class="iconfont icon-<%- item.icon %>"></i>
            </a>
            <% } else { %>
              <a title="<%- item.name %>" href="<%- item.path %>">
                <i class="iconfont icon-<%- item.icon %>"></i>
              </a>
              <% } %>
        </li>
        <% } %>
    </ul>
  </div>
  <% for(let item of theme.footer.more){ %>
    <%
      footerMoreVars.forEach(i => {
        if (item.name.includes(i.name)) {
          item.name = item.name.replace(i.name, i.func)
        }
      })
    %>
    <div class="footer-more">
      <% if (item.path) { %>
        <a href="<%- item.path %>"><%- item.name %></a>
      <% } else { %>
        <%- item.name %>
      <% } %>  
    </div>
  <% } %>
  <% if (theme.footer.views && theme.footer.views.enable) { %>
    <div class="footer-views">
      <% for(let item of theme.footer.views.item) {
        if (item.enable) { %>
          <%- item.name %><span id="<%- item.id %>"></span><%- item.unit %>
        <% } %>
      <% } %>
    </div>
  <% } %>
  <div class="footer-beian">
    <a href="https://beian.miit.gov.cn/" target="_blank">黔ICP备2024042284号</a><br/>
  </div>
  <div class="footer-beian">
    <a href="https://beian.mps.gov.cn/#/query/webSearch?code=52032202001891" rel="noreferrer" target="_blank">
      <span style="display:flex;items-align:center;justify-content:center;gap:3px;"><img width=18px src="/images/beian.png"/>贵公网安备52032202001891号</span></a>
  </div>
</div>
